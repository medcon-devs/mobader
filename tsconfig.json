{
  "compilerOptions": {

    
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noUnusedLocals": false, // Allow unused imports/variables
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "deploy/.next/types/**/*.ts"
, "next.config.ts", "next.config.ts" ,"src/**/*.ts", "src/**/*.tsx", "src/app/series/[slugs]/page.jss" ],
  "exclude": [
    "node_modules",
    "node_modules", "deploy/.next"
  ]
}
